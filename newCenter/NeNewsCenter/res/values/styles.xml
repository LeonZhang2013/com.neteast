<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NoFrameDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BlueProgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/login_progress</item>
    </style>

    <style name="LoginEdit">
        <item name="android:background">@drawable/login_edit</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHighlight">#ff5193ff</item>
        <item name="android:textColorHint">#ffc7c7c7</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="UserCenter" />

    <style name="UserCenter.Label">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:maxLength">4</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="UserCenter.Content" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/usercenter_content</item>
        <item name="android:maxLength">18</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#595959</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>