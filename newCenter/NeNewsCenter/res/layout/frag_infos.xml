<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp" >

            <View
                android:id="@+id/infos_top"
                android:layout_width="71dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:background="@drawable/infos_sys_title" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="15dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/infos_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/infos_refresh" />

                <Button
                    android:id="@+id/infos_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/infos_clear" 
                    android:visibility="gone"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/infos_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/infos_empty"
                android:visibility="gone" />

            <ListView
                android:id="@+id/infos_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@drawable/transparent"
                android:divider="@drawable/transparent"
                android:listSelector="@drawable/transparent" >
            </ListView>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>