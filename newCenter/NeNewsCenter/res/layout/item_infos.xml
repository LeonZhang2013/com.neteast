<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:minHeight="146dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/item_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:textColor="@color/darkGreen"
                android:textSize="16sp"
                android:text="系统消息"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/item_info_delete"
                android:layout_width="48dp"
                android:layout_height="18dp"
                android:layout_gravity="right|center_vertical"
                android:button="@drawable/info_item_delete"
                android:visibility="visible"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_info_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="7dp"
                android:visibility="visible" 
                android:background="@android:drawable/ic_dialog_email"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/item_info_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="110"
                    android:textColor="#333333"
                    android:textSize="16sp" 
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:text="dadadk的空间哈大大大大的大大大大大大大大大大大大大 啊大大啊"/>

                <Button
                    android:id="@+id/item_info_showAll"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="bottom|right"
                    android:background="@android:drawable/ic_menu_more"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:minHeight="30dp" >

            <TextView
                android:id="@+id/item_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="2012-02-02"
                android:layout_marginBottom="10dp" />
            <View 
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/item_infos_divider"
                android:layout_gravity="bottom"/>
        </FrameLayout>
    </LinearLayout>

</FrameLayout>