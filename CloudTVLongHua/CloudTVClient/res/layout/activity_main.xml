<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/ip_configer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/app_logo" />

    <ImageView
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/menu_bg" />

<!--     <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/company_name" /> -->

    <RadioGroup
        android:id="@+id/menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/menu_1"
            android:layout_width="200dp"
            android:layout_height="154dp"
            android:background="@drawable/tab_1_style"
            android:button="@null" />

        <RadioButton
            android:id="@+id/menu_2"
            android:layout_width="200dp"
            android:layout_height="154dp"
            android:background="@drawable/tab_2_style"
            android:button="@null" />

        <RadioButton
            android:id="@+id/menu_3"
            android:layout_width="200dp"
            android:layout_height="154dp"
            android:background="@drawable/tab_3_style"
            android:button="@null" />

        <RadioButton
            android:id="@+id/menu_4"
            android:layout_width="200dp"
            android:layout_height="154dp"
            android:background="@drawable/tab_4_style"
            android:button="@null" />

        <RadioButton
            android:id="@+id/menu_5"
            android:layout_width="200dp"
            android:layout_height="154dp"
            android:background="@drawable/tab_5_style"
            android:button="@null" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/page_flag_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        android:orientation="horizontal" >
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/channel_display_layout"
        android:layout_width="1000dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/page_flag_layout" />

    <LinearLayout
        android:id="@+id/logout_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你好  AE81  |"
            android:textColor="#C6C6C6"
            android:textSize="22sp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:text="注销"
            android:onClick="logout"
            android:textColor="#C6C6C6"
            android:textSize="22sp" />
    </LinearLayout>

</RelativeLayout>