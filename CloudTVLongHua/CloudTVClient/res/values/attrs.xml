<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <declare-styleable name="FormAttrs">
        <attr name="showBorder" format="boolean" />
        <attr name="showDividerLine" format="boolean" />
        <attr name="borderColor" format="color" />
        <attr name="dividerLineColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="dividerLineWidth" format="dimension" />
        <attr name="borderIsDash" format="boolean" />
        <attr name="dividerLineIsDash" format="boolean" />
        <attr name="showTitle" format="boolean" />
        <attr name="title" format="string" />
        <attr name="titleTextSize" format="dimension" />
        <attr name="titleMarginTop" format="integer" />
        <attr name="titleMarginBottom" format="integer" />
        <attr name="titleMarginLeft" format="integer" />
        <attr name="titleMarginRight" format="integer" />
        <attr name="titleTextColor" format="color" />
        <attr name="titleTextBold" format="boolean" />
        <attr name="titlePosition">
            <enum name="top_left" value="1" />
            <enum name="top_right" value="2" />
            <enum name="top_center" value="3" />
            <enum name="bottom_left" value="4" />
            <enum name="bottom_right" value="5" />
            <enum name="bottom_center" value="6" />
         </attr>
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="lineHeight" format="integer" />
        <attr name="columnsMonospaced" format="boolean" />
        <attr name="columnsWidthWeight" format="string" />
    </declare-styleable>
</resources>