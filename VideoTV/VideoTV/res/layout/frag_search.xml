<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <ImageView
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_nav_shadow"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_search"
        android:layout_marginTop="89dp"
        android:layout_marginLeft="271dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="201dp"
            android:layout_marginLeft="137dp"
            >

            <EditText
                android:id="@+id/search_input"
                android:layout_width="621dp"
                android:layout_height="50dp"
                android:textColorHint="@android:color/white"
                android:background="@drawable/bg_search_edit"
                android:hint="输入名称中文关键字"
                android:paddingLeft="17dp"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:layout_marginRight="27dp"/>

            <Button
                android:id="@+id/search_by_name"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_texture"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:text="按名称搜"
                android:layout_marginRight="27dp"
                />

            <Button
                android:id="@+id/search_by_actor"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_texture"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:text="按主演搜"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="189dp"
            android:layout_marginTop="98dp"
            >

            <LinearLayout
                android:id="@+id/panel1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>

                <include layout="@layout/item_keyword"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
