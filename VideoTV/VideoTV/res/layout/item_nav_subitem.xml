<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/Nav.SubItem"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_sublist_item_height"
              android:layout_marginTop="@dimen/nav_sublist_item_margin"
              android:focusable="true"
              android:clickable="true"
              android:gravity="center_vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:duplicateParentState="true"
        android:layout_marginLeft="12dp"
        android:contentDescription="@string/nav_tab_image"
        android:src="@drawable/ic_arrow"
        />

    <TextView
        android:id="@+id/title"
        style="@style/Nav.Sub_TabText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:layout_marginLeft="16dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/nav_tab_text_size"
        />
</LinearLayout>