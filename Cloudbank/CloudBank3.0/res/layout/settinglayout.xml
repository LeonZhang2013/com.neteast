<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/settingbg"
	android:orientation="vertical" 
	android:paddingLeft="40dp">
	<TextView
		android:id="@+id/basesetting"
		style="@style/settingotherstyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:gravity="center_vertical"
		android:text="基本设置：" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="40dp" >
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/totalbtn" />
		<TextView
		    android:id="@+id/totalText"
			style="@style/settingcapacitystyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="总计：" />
		<TextView
		    android:id="@+id/totalText1"
			style="@style/settingcapacitystyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:text="3320GB" />
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:background="@drawable/usedbtn" />
		<TextView
		    android:id="@+id/usedText"
			style="@style/settingcapacitystyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="已使用：" />
		<TextView
		    android:id="@+id/usedText1"
			style="@style/settingcapacitystyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:text="3320GB" />
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:background="@drawable/nousedbtn" />
		<TextView
		    android:id="@+id/nousedText"
			style="@style/settingcapacitystyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="剩余：" />
		<TextView
		    android:id="@+id/nousedText1"
			style="@style/settingcapacitystyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:text="3320GB" />
		<ImageButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"
			android:background="@drawable/upgradebt"
			android:onClick="ungradeOnclick" />

	</LinearLayout>
	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:background="@drawable/clearcachebtn"
		android:onClick="clearbufferOnclick"/>
	<ImageButton
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:background="@drawable/recommendtofriendbtn"
		android:onClick="recommandOnclick" />
	<TextView
		android:id="@+id/curver"
		style="@style/settingcapacitystyle"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:layout_marginTop="30dp"
		android:clickable="false"
		android:gravity="center_vertical"
		android:text="" />
</LinearLayout>