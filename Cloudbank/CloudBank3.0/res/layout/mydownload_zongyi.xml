<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="50dp">
    <FrameLayout
        android:id="@+id/mydownloadZongyiView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mydownload_series"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="220dp"
            android:orientation="horizontal" >
            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:gravity="left"
	            android:layout_marginLeft="30dp"
	            android:orientation="horizontal">
	            <ImageView
					android:id="@+id/zongyi_small_left_arrow"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:background="@drawable/series_small_left_arrow" />
            </LinearLayout>

            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true" 
	            android:gravity="right"
	            android:layout_marginRight="80dp"
	            android:orientation="horizontal">
	            <ImageView
					android:id="@+id/zongyi_small_right_arrow"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_gravity="right"
					android:background="@drawable/series_small_right_arrow" />
	         </LinearLayout>
	         <LinearLayout
		     	android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:orientation="horizontal"
		        android:layout_marginRight="30dp"
		        android:gravity="right">
		        <TextView
		        	android:id="@+id/zongyi_pageinfo"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_gravity="right"
		            android:textAppearance="?android:attr/textAppearanceLarge"
		            android:textColor="#ffffff" 
		            android:text="3/6"/>
			</LinearLayout>
			<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@id/zongyi_small_right_arrow"
	    		android:layout_toLeftOf="@id/zongyi_small_left_arrow"
	            android:orientation="horizontal">
	            <com.neteast.clouddisk.customerview.CustomerGridView
	            	android:id="@+id/zongyigridview0"
	            	android:layout_width="match_parent"
	            	android:layout_height="wrap_content"
	            	android:layout_marginLeft="20dp"
	            	android:layout_marginRight="100dp"
	           	 	android:gravity="center"
	            	android:horizontalSpacing="4dp"
	            	android:numColumns="10">
				</com.neteast.clouddisk.customerview.CustomerGridView>
	      </LinearLayout>

		</RelativeLayout>
		<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="300dp"
            android:orientation="horizontal" >
            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:gravity="left" >
           	<ImageView
				android:id="@+id/zongyi_big_left_arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_gravity="left"
				android:background="@drawable/series_big_left_arrow" />
           	</LinearLayout>
           	<LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true" 
	            android:gravity="right">    
			<ImageView
				android:id="@+id/zongyi_big_right_arrow"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_gravity="right"
				android:background="@drawable/series_big_right_arrow" />
			</LinearLayout>
			<LinearLayout
		    android:id="@+id/zongyigridLayout"
	    	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	    	android:layout_toRightOf="@id/zongyi_big_right_arrow"
	    	android:layout_toLeftOf="@id/zongyi_big_left_arrow"
	        android:orientation="horizontal">
			<com.neteast.clouddisk.customerview.CustomerGridView
	            android:id="@+id/zongyigridview"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:layout_marginRight="20dp"
	            android:gravity="center"
	            android:horizontalSpacing="8dp"
	            android:numColumns="2"
	            android:verticalSpacing="10dp" >
			</com.neteast.clouddisk.customerview.CustomerGridView>
		</LinearLayout>
		</RelativeLayout>

        
	</FrameLayout>
</LinearLayout>