<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/versionbg"
	android:orientation="vertical" >
	<TextView
		android:id="@+id/upgradetitle"
		style="@style/upgradetextstyle"
		android:layout_width="match_parent"
		android:layout_height="80dp"
		android:layout_marginTop="15dp"
		android:gravity="center_vertical|center_horizontal"
		android:text="版本信息" />
	<TextView
		android:id="@+id/upgradecontent"
		style="@style/settingotherstyle"
		android:layout_width="match_parent"
		android:layout_height="260dp"
		android:layout_below="@id/upgradetitle"
		android:layout_marginLeft="30dp"
		android:layout_marginRight="30dp"
		android:text="" />
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/upgradecontent"
		android:gravity="center_vertical|center_horizontal" >
		<ImageButton
		    android:id="@+id/upgradebtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/shengjibg" />
	</LinearLayout>
</RelativeLayout>