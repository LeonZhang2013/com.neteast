<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/passwordbg"
	android:orientation="vertical" >
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="30dp"
		android:layout_weight="2.3" >
		<TextView
			android:id="@+id/changepswtitle"
			style="@style/upgradetextstyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
			android:text="密码修改" />
		<TextView
			android:id="@+id/tip1"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginLeft="100dp"
			android:text="你输入的密码不正确，请重新输入" />
		<TextView
			android:id="@+id/oldpsw"
			style="@style/settingotherstyle"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="30dp"
			android:gravity="center_vertical|right"
			android:text="原始密码：" />
		<EditText
			android:id="@+id/pswcontent"
			android:layout_width="300dp"
			android:layout_height="45dp"
			android:layout_above="@id/tip1"
			android:layout_toRightOf="@id/oldpsw"
			android:editable="true" />
	</RelativeLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="30dp"
		android:layout_weight="1.2"
		android:gravity="center_vertical"
		android:orientation="horizontal" >
		<TextView
			style="@style/settingotherstyle"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|right"
			android:text="新密码：" />
		<EditText
		    android:id="@+id/newpswcontent1"
			android:layout_width="300dp"
			android:layout_height="45dp"
			android:editable="true" />
	</LinearLayout>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_marginLeft="30dp"
		android:layout_weight="1.2" >
		<TextView
			android:id="@+id/tip2"
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginLeft="100dp"
			android:text="您两次输入的密码不相同，请重新输入" />
		<TextView
			android:id="@+id/newpsw2"
			style="@style/settingotherstyle"
			android:layout_width="100dp"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_marginBottom="30dp"
			android:gravity="center_vertical|right"
			android:text="确认密码：" />
		<EditText
			android:id="@+id/newpswcontent2"
			android:layout_width="300dp"
			android:layout_height="45dp"
			android:layout_above="@id/tip2"
			android:layout_toRightOf="@id/newpsw2"
			android:editable="true" />
	</RelativeLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="2"
		android:gravity="center_vertical"
		android:orientation="horizontal" >
		<ImageButton
		    android:id="@+id/changepswokbtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="100dp"
			android:background="@drawable/okbt" />
		<ImageButton
		    android:id="@+id/changepswcancelbtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="50dp"
			android:background="@drawable/cancelbt" />
	</LinearLayout>
</LinearLayout>