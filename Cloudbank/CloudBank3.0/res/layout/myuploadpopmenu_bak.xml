<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popmenubg"
            android:orientation="vertical"
        >
 		<LinearLayout
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_gravity="top|center"
 		    android:layout_marginLeft="20dp"
 		    android:layout_marginRight="15dp"
 		    android:layout_marginTop="20dp"
 		    android:gravity="center" >
	            <Button 
	                android:layout_width="wrap_content"
	                 android:layout_marginRight="15dp"
	                android:background="@drawable/menuitem_playopen"
					android:layout_height="wrap_content"  
					android:id="@+id/bt_play">
				</Button>
				<Button android:layout_width="wrap_content"
				     android:layout_marginRight="15dp"
				    android:background="@drawable/menuitem_transcode"
					android:layout_height="wrap_content"  
					android:id="@+id/bt_transcode">
				</Button>
				<Button android:layout_width="wrap_content"
				     android:layout_marginRight="15dp"
				    android:background="@drawable/menuitem_share"
					android:layout_height="wrap_content"  
					android:id="@+id/bt_share">
				</Button>
				<Button android:layout_width="wrap_content"
				     android:layout_marginRight="15dp"
				    android:background="@drawable/menuitem_rename"
					android:layout_height="wrap_content"  
					android:id="@+id/bt_rename">
				</Button>
        </LinearLayout>
       <LinearLayout
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_gravity="center|bottom"
 		    android:layout_marginLeft="20dp"
 		    android:layout_marginRight="10dp"
 		    android:layout_marginTop="10dp"
 		    android:gravity="center" >
	            <Button 
	                android:gravity="center"
	                android:layout_width="50dp"
	                android:layout_marginRight="25dp"
	                android:background="@drawable/menuitem_delete"
					android:layout_height="wrap_content"  
					android:id="@+id/bt_delete">
				</Button>
				<Button android:layout_width="wrap_content"
				     android:layout_marginRight="15dp"
				    android:background="@drawable/menuitem_cut"
					android:layout_height="wrap_content"  
					android:id="@+id/bt_cut">
				</Button>
				<Button android:layout_width="wrap_content"
				     android:layout_marginRight="15dp"
				    android:background="@drawable/menuitem_copy"
					android:layout_height="wrap_content"  
					android:id="@+id/bt_copy">
				</Button>
				<Button android:layout_width="wrap_content"
				     android:layout_marginRight="15dp"
				    android:background="@drawable/menuitem_attr"
					android:layout_height="wrap_content"  
					android:id="@+id/bt_attr">
				</Button>
        </LinearLayout>
</LinearLayout>