<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommendvideoelementlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:gravity="center"
    android:orientation="vertical" >

    <com.neteast.clouddisk.customerview.ItemViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ico_foder"
        android:orientation="vertical" >
    </com.neteast.clouddisk.customerview.ItemViewGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/videodownloadbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="downloadButtonClick"
            android:src="@drawable/downloadbuttonstyle" />

        <TextView
            android:id="@+id/videodetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:text="@string/detail"
            android:textColor="#ffffff"
            android:onClick="showVideoDetail"
            android:clickable="true"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>