<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/downloadbg">
	<!-- 分类 -->
	<LinearLayout
		android:id="@+id/tablayout"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_marginLeft="250dp"
		android:gravity="center_vertical|center_horizontal">
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_gravity="center_horizontal|center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:clickable="true"
				android:layout_marginTop="15dp"
				android:gravity="top"
				android:textSize="18sp"
				android:text="我的下载"
				android:onClick="setSelect"
				android:tag="0">
			</TextView>
		</LinearLayout>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:layout_gravity="center_horizontal|center_vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:clickable="true"
				android:layout_marginTop="15dp"
				android:gravity="top"
				android:textSize="18sp"
				android:text="已安装"
				android:onClick="setSelect"
				android:tag="1">
			</TextView>
		</LinearLayout>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:clickable="true"
				android:layout_marginTop="15dp"
				android:gravity="top"
				android:textSize="18sp"
				android:text="可更新"
				android:onClick="setSelect"
				android:tag="2">
			</TextView>
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:id="@+id/pageNum"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:paddingTop="10dp"
		android:paddingRight="20dp"
		style="@style/pageNum" />
	<android.support.v4.view.ViewPager
		android:id="@+id/view_pager_id"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/tablayout">
	</android.support.v4.view.ViewPager>
	<ImageButton
		android:id="@+id/leftpagebutton"
		android:layout_width="30dp"
		android:layout_height="70dp"
		android:background="#00ffffff"
		android:src="@drawable/leftbuttonstyle"
		android:scaleType="fitXY"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true" />
	<ImageButton
		android:id="@+id/rightpagebutton"
		android:layout_width="30dp"
		android:layout_height="70dp"
		android:background="#00ffffff"
		android:scaleType="fitXY"
		android:src="@drawable/rightbuttonstyle"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true" />
	<LinearLayout
		android:id="@+id/allbutton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:orientation="horizontal"
		android:layout_marginTop="60dp"
		android:layout_marginRight="70dp"
		android:visibility="gone">
		<ImageButton
			android:id="@+id/upgradeallbutton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/upgradeallbutton"
			android:onClick="upgradeAllClick" />
		<ImageButton
			android:id="@+id/ignoredallbutton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/ignoredallbutton"
			android:onClick="ignoredAllClick"
			android:layout_marginLeft="10dp" />
	</LinearLayout>
</RelativeLayout>
